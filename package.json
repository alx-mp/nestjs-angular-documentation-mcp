{
  "name": "nestjs-angular-documentation-mcp",
  "version": "1.0.0",
  "description": "A Model Context Protocol (MCP) service that compares NestJS and Angular codebases with best practices from official documentation",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "nestjs",
    "angular",
    "mcp",
    "model-context-protocol",
    "documentation",
    "best-practices",
    "code-analysis"
  ],
  "author": "Alex Medina <info@alex-medina.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alx-mp/nestjs-angular-documentation-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/alx-mp/nestjs-angular-documentation-mcp/issues"
  },
  "homepage": "https://github.com/alx-mp/nestjs-angular-documentation-mcp#readme",
  "packageManager": "pnpm@10.8.1",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.0",
    "axios": "^1.6.7",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.4.1",
    "jscodeshift": "^0.15.1",
    "node-fetch": "^3.3.2",
    "openai": "^4.26.0",
    "puppeteer": "^22.0.0",
    "ts-morph": "^21.0.1",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/jscodeshift": "^0.11.10",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "@vitest/coverage-v8": "^1.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
